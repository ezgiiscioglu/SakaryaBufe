
@{
    ViewBag.Title = "IcecekCesitleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<SakaryaBufe.Icecekler>

<script defer src="/Content/js/jquery.flexslider.js"></script>
<link rel="stylesheet" href="/Content/css/flexslider1.css" type="text/css" media="screen" />
<script>
    // Can also be used with $(document).ready()
    $(window).load(function () {
        $('.flexslider').flexslider({
            animation: "slide",
            controlNav: "thumbnails"
        });
    });
</script>


<div class="gallery">
    <div class="container">
        <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
            <h3 class="title">Icecek<span> Cesitleri </span></h3>

        </div>
        <div class="gallery-info">
            @foreach (var icecekler in Model)
            {

                <div class="col-md-3 gallery-grid wow flipInY animated" data-wow-delay=".5s">
                    <a href="Cikolatalar/CikolataCesitleri/ }"> <img src="@icecekler.Resim" class="img-responsive" alt="" /></a>
                    <div class="gallery-text simpleCart_shelfItem">
                        <h5><a class="name" href="">@icecekler.Baslik</a></h5>
                        <br> <h5><a class="name" href="">@icecekler.Fiyat</a></h5>
                        <br><br>   <button class="btn btn-warning">  <a href="/Icecekler/SatinAl/@icecekler.id" class="add-cart item_add">SATIN AL</a></button>
                    </div>



                </div>

            }
            <div class="clearfix"></div>
        </div>
    </div>
</div>
